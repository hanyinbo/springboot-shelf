<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aison.mapper.WxCompanyMapper">

    <select id="getPageOfCompany" resultType="com.aison.entity.WxCompany">
         select * from wx_company a where a.del_flag=0

             <if test="pageDto.companyName != null  and pageDto.companyName !=''">
               and a.company_name like CONCAT('%',#{pageDto.companyName},'%')
             </if>
             <if test="pageDto.companyCode != null and pageDto.companyCode !=''">
                 and a.company_code=#{pageDto.companyCode}
             </if>
             <if test="pageDto.industry != null and pageDto.industry !=''">
                 and a.industry like CONCAT('%',#{pageDto.industry},'%')
             </if>
             <if test="pageDto.region != null and pageDto.region !=''">
                 and a.region like CONCAT('%',#{pageDto.region},'%')
             </if>
             <if test="pageDto.address != null and pageDto.address != ''">
                 and a.address like CONCAT('%',#{pageDto.address},'%')
             </if>

    </select>
</mapper>